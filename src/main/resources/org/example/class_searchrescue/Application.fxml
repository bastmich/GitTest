<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.class_searchrescue.App.SimController">
    <!-- StackPane to contain the canvas and rectangle -->
    <StackPane>
        <!-- Rectangle surrounding the canvas -->
        <Rectangle width="800.0" height="600.0" fill="transparent" stroke="black" strokeWidth="2" />
        <!-- Canvas at the top -->
        <Canvas fx:id="canvas" width="800.0" height="600.0" />
    </StackPane>

    <!-- Spacer -->
    <Region prefHeight="5.0" />

    <!-- StackPane to contain the controller and rectangle -->
    <StackPane>
        <!-- Rectangle surrounding the controller -->
        <Rectangle width="800.0" height="200.0" fill="transparent" stroke="black" strokeWidth="2" />
        <!-- Controller -->
        <fx:include source="Controller.fxml" />
    </StackPane>
</VBox>
